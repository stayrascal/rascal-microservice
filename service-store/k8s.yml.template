apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: service-store-deployment
  namespace: {ENV}
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: service-store
    spec:
      containers:
        - name: service-store
          image: registry.exmertec.com/service/store:{IMAGE_VERSION}
          livenessProbe:
            httpGet:
              path: /system/health
              port: 8080
            initialDelaySeconds: 60
            periodSeconds: 20
            timeoutSeconds: 20
          readinessProbe:
            httpGet:
              path: /system/health
              port: 8080
            initialDelaySeconds: 60
            periodSeconds: 20
            timeoutSeconds: 20
          ports:
            - containerPort: 8080
          env:
            - name: SPRING_PROFILES_ACTIVE
              value: k8s_dev
      imagePullSecrets:
        - name: regsecret
      nodeSelector:
        service/node-type: env-{ENV}

---

apiVersion: v1
kind: Service
metadata:
  name: service-store-service
  namespace: {ENV}
spec:
  selector:
    app: service-store
  ports:
    - protocol: TCP
      port: 8080
      targetPort: 8080
